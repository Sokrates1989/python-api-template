# Python version for Docker
PYTHON_VERSION=3.13

# Database Configuration - Neo4j (External)
DB_TYPE=neo4j
DB_MODE=external

# External Neo4j (connects to existing database)
# Update these values to point to your external Neo4j server
NEO4J_URL=bolt://your-neo4j-server.com:7687
DB_USER=neo4j
DB_PASSWORD=your_password

# API Configuration
PORT=8000
DEBUG=true

# Redis Configuration
# For external Redis, update this URL
REDIS_URL=redis://localhost:6379

# Docker Image Tag
IMAGE_TAG=external-neo4j
