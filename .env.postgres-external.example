# Python version for Docker
PYTHON_VERSION=3.13

# Database Configuration - PostgreSQL (External)
DB_TYPE=postgresql
DB_MODE=external

# External PostgreSQL (connects to existing database)
# Update these values to point to your external PostgreSQL server
DATABASE_URL=postgresql://your_user:your_password@your-postgres-server.com:5432/your_database
DB_NAME=your_database
DB_USER=your_user
DB_PASSWORD=your_password
DB_PORT=5432

# API Configuration
PORT=8000
DEBUG=true

# Redis Configuration
# For external Redis, update this URL
REDIS_URL=redis://localhost:6379

# Docker Image Tag
IMAGE_TAG=external-postgres
