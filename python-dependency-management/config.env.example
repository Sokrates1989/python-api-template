# Python Dependency Management Environment Configuration
# Copy this file to config.env and customize as needed

# Whether to use uv as PDM's backend for faster dependency resolution and installation
# Options: true, false
USE_UV_BACKEND=true

# Whether to enable PDM's install cache for faster subsequent installs
# Options: true, false
PDM_INSTALL_CACHE=true

# Whether to run installs in parallel (faster but more resource intensive)
# Options: true, false
PDM_PARALLEL_INSTALL=true

# Python version to use (should match Dockerfile)
PYTHON_VERSION=3.13 
